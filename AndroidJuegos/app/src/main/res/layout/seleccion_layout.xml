<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeleccionActividad">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/verde"
        />

    <Button
        android:layout_width="85pt"
        android:layout_height="wrap_content"
        android:text="@string/curso"
        android:id="@+id/btn_curso"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bien"
        android:id="@+id/imv_opcionima"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_curso"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/txv_descripcion"
        android:layout_below="@+id/imv_opcionima"
        />




</RelativeLayout>
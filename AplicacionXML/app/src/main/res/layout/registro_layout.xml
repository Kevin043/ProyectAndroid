<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/regis2"

    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registro"
        android:textColor="@color/medio"
        android:textAlignment="center"
        android:textSize="30pt"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="10pt"
        android:layout_marginTop="20dip"
        android:textColor="@color/claro"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TFname"
        android:textColor="@color/claro"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo Electronico"
        android:textSize="10pt"
        android:textColor="@color/claro"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TFemail"
        android:textColor="@color/claro"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textSize="10pt"
        android:textColor="@color/claro"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TFuname"
        android:textColor="@color/claro"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:textSize="10pt"
        android:textColor="@color/claro"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TFpass1"
        android:textColor="@color/claro"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar Contraseña"
        android:textSize="10pt"
        android:textColor="@color/claro"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TFpass2"
        android:textColor="@color/claro"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Registro"
        android:id="@+id/Bsignupbutton"
        android:onClick="onSignUpClick"
        android:textAlignment="center"
        android:background="@drawable/sign_in_button"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginTop="30dip"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btn_login"
        android:onClick="onSignUpClick"
        android:gravity="center"
        android:textSize="20dip"
        android:background="@drawable/sign_up_button"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginTop="30dip"

        />
    </LinearLayout>


</LinearLayout>
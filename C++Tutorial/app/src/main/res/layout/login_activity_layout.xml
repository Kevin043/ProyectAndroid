<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/login"
        android:id="@+id/inv_login"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inv_login"
        android:text="Usuario"
        android:id="@+id/usuario" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edt_Usuario"
        android:layout_below="@id/usuario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contrasenia"
        android:id="@+id/contasenia"
        android:layout_below="@id/edt_Usuario"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edt_Clave"
        android:layout_below="@id/contasenia"
        android:password="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aceptar"
        android:id="@+id/btn_login"
        android:layout_below="@id/edt_Clave"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        />


   <Button

       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/Registrarse"
       android:id="@+id/btn_signup"
       android:layout_below="@id/btn_login"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="48dp"
       android:onClick="cargar"
       />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mas tarde"
        android:id="@+id/btn_low"
        android:layout_margin="48dp"
        android:layout_below="@id/btn_signup"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>
</ScrollView>
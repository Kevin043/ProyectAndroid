<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/admin"
        android:paddingTop="15dp"
        android:id="@+id/imv_erick"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="10pt"
            android:textSize="10pt"
            android:layout_gravity="center"
            android:textColor="@color/colorAzul"
            android:gravity="center"
            android:text="Desarrollador"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="10pt"
        android:layout_gravity="center"
        android:text="Erick Eduardo Castañon Anaya"
        android:id="@+id/textView3" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="10pt"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10pt"
            android:textColor="@color/colorAzul"
            android:text="Institución"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="10pt"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:text="Universidad Tecnológica Del Norte De Guanajuato"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="10pt"
            android:layout_marginTop="10pt"
            android:layout_gravity="center_vertical"
            android:text="Asesor"
            android:textColor="@color/colorAzul"
            android:gravity="center"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:textSize="10pt"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:text="Anastacio Rodríguez García"
        />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="10pt"
            android:layout_gravity="center_vertical"
            android:text="Grupo y Carrera"
            android:layout_marginTop="10pt"
            android:textColor="@color/colorAzul"
            android:gravity="center"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="10pt"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="GSI-1151 \n Sistemas Informáticos"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="10pt"
            android:layout_gravity="center_vertical"
            android:text="Lugar De Origen"
            android:layout_marginTop="10pt"
            android:textColor="@color/colorAzul"
            android:gravity="center"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="10pt"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="Dolores Hidalgo C. I. N., Gto."
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:textSize="10pt"
        android:layout_marginTop="10pt"
        android:textColor="@color/colorAzul"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:text="El Generador De Reportes JasperReport"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    </LinearLayout>
</ScrollView>